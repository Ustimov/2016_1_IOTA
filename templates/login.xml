<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:include src="./header.xml"/>
    <div>
        <div>
            <form class="js-submit">
                <div class="js-alert"></div>
                <h2>Please sign in</h2>
                <label for="inputLogin" class="sr-only">Login</label>
                <input name="login" type="text" id="inputLogin" class="js-login" placeholder="Login"
                       required="" autofocus=""/>
                <br/>
                <label for="inputPassword" class="sr-only">Password</label>
                <input name="password" type="password" id="inputPassword" class="js-password"
                       placeholder="Password" required=""/>
                <div>
                    <label>
                        <input type="checkbox" value="remember-me"/>
                        Remember me
                    </label>
                </div>
                <button type="submit">Sign in</button>
                <a type="button" href="#">Back</a>
            </form>
        </div>
    </div>
</fest:template>

<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <div class="row">
        <div class = "col-md-6 col-md-offset-3 jumbotron">
            <p><h2 class="form-signin-heading" style="text-align:center">Registration</h2></p>
            <form action="#" method="post" class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="mail">Email</label>
                    <div class="col-sm-8">
                        <input required="" type="email" class="form-control" name="second_name" id="email" placeholder="Email"></input>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="name">Name</label>
                    <div class="col-sm-8">
                        <input required="" type="text" class="form-control" name="second_name" id="name" placeholder="Name"></input>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="passwd">Password</label>
                    <div class="col-sm-8">
                        <input required="" type="password" class="form-control" name="passwd" id="passwd" placeholder="Password"></input>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="confpasswd">Confim Password</label>
                    <div class="col-sm-8">
                        <input required="" type="password" class="form-control" name="confpasswd" id="confpasswd" placeholder="Confim password"></input>
                    </div>
                </div>
                <div class="col-md-4 col-md-offset-4">
                    <button type="submit" class="btn btn-success" style="text-area:center">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <br></br>
    <a type="button" class="btn btn-danger" style="margin:10px" href="#">Back</a>
</fest:template>

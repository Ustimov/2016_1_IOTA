<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:include src="./header.xml"/>
    <img id="loader" src="/images/ajax-loader.gif" class = "grid__str-offset-4 grid__col-offset_5" style="position:absolute"></img>
    <div  class = "grid__container grid__str_9">
        <div class = "grid__col_9 grid__str_10">
            <canvas id="canvas" class="grid__str_10 grid__col_12" style="position:absolute;overflow: hidden;z-index: 1000;"></canvas>
            <div class = "grid__str_8"></div>
            <div class = "grid__col_12 grid__str_2">
                <div class = "grid__col_12 grid__str_9" style="border-top: 4px double black">

                </div>
            </div>
        </div>
        <div class = "grid__col_3 grid__str_10">
            <div class = "grid__col_11 grid__str_10" style="border-left: 4px double black; padding:10px">
                <div class = "block hidden js-gamer1" style="border-bottom: 4px double black">
                    <p class = "text">Игрок 1:</p>
                    <p class = "text text__nick"></p>
                    <p class = "text">Очков: <span class = "score"></span></p>
                </div>
                <div class = "block hidden js-gamer2" style="border-bottom: 4px double black">
                    <p class = "text">Игрок 2:</p>
                    <p class = "text text__nick"></p>
                    <p class = "text">Очков: <span class = "score"></span></p>
                </div>
                <div class = "block hidden js-gamer3">
                    <p class = "text">Игрок 3:</p>
                    <p class = "text text__nick"></p>
                    <p class = "text">Очков: <span class = "score"></span></p>
                </div>
                <button class="js-over" type="submit">Конец хода</button>
                <br/>
                <button class="js-exit" type="submit">Выход</button>
                <br/>
                <button class="js-pass" type="submit">Пасс</button>
                <br/>
                <button class="js-debugConclude" type="submit">debug_conclude</button>
            </div>
        </div>
    </div>

</fest:template>

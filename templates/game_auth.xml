<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">
                        <i class="glyphicon glyphicon-knight"></i> iota game
                    </a>
                </div>
                <form class="navbar-form navbar-left">
                    <div class="form-group">
                        <div class="btn-group">
                            <button type="button" class="btn btn-link" data-toggle="button">
                                <i class="glyphicon glyphicon-paperclip"></i> Правила игры
                            </button>
                        </div>
                    </div>
                </form>
                <form class="navbar-form navbar-right">
                    <div class="form-group">
                        <div class="btn-group">
                            <button type="button" class="btn btn-md btn-success js-over">
                                <i class="glyphicon glyphicon-ok"></i> Завершить ход
                            </button>
                            <button type="button" class="btn btn-md btn-primary" disabled="disabled">
                                <i class="glyphicon glyphicon-transfer js-pass"></i> Заменить карты
                            </button>
                            <button type="button" class="btn btn-md btn-warning js-debugConclude">
                                <i class="glyphicon glyphicon glyphicon-hourglass"></i>
                            </button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="btn-group">
                            <button type="button" class="btn btn-md btn-danger js-exit-prev" data-toggle="button">
                                <i class="glyphicon glyphicon-log-out"></i> Закончить игру
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <div class="grid__str_9">
        <div class="row">
            <img id="loader" src="/images/ajax-loader.gif" class = "grid__str-offset-4 grid__col-offset_5" style="position:absolute"></img>
            <div  class = "grid__container grid__str_9">
                <div id = "myModal" class="modal fade js-modal" tabindex="-1" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title"></h4>
                            </div>
                            <div class="modal-body">
                                <p class="js-alert"></p>
                                <p class="js-gamer1"></p>
                                <p class="js-gamer2"></p>
                                <p class="js-gamer3"></p>
                                <p class="js-gamer4"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Вернуться</button>
                                <button type="button" class="btn btn-primary js-exit">Выход</button>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div>
        </div>
        <canvas id="canvas" class="grid__str_10 grid__col_12"></canvas>
    </div>
</fest:template>

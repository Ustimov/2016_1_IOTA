<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:include src="./header.xml"/>
    <div class="container">
        <form class="js-submit leftpad">
            <h2>Registration</h2>
            <div class="js-alert"></div>
            <div class="form_group">
                <div>
                    <label for="name">Login</label>
                </div>
                <input required="" type="text" name="login" id="name" class="form_input"
                           placeholder="Name"/>
            </div>
            <div class="form_group">
                <div>
                    <label>Email</label>
                </div>
                <input required="" type="email" class="js-email form_input" name="email" id="email"
                           placeholder="Email"/>
            </div>
            <div class="form_group">
                <div>
                    <label for="passwd">Password</label>
                </div>
                <input required="" type="password" class="js-password form_input" name="password" id="passwd"
                       placeholder="Password"/>
            </div>
            <div class="form_group">
                <div>
                    <label for="confpasswd">Confim Password</label>
                </div>
                    <input required="" type="password" class="js-password2 form_input" name="confirm_password"
                           id="confpasswd" placeholder="Confim password"/>
            </div>
            <button type="submit" class="submit">Sign in</button>
            <div class="button"><a class="link" href="#">Back</a></div>
        </form>
    </div>
</fest:template>

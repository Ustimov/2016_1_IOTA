<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:include src="./header.xml"/>
    <div>
        <div>
            <p>
                <h2>Registration</h2>
            </p>
            <form class="js-submit">
                <div class="js-alert"></div>
                <div>
                    <label for="name">Login</label>
                    <div>
                        <input required="" type="text" name="login" id="name"
                               placeholder="Name"/>
                    </div>
                </div>
                <div>
                    <label>Email</label>
                    <div class="col-sm-9">
                        <input required="" type="email" class="js-email" name="email" id="email"
                               placeholder="Email"/>
                    </div>
                </div>
                <div>
                    <label for="passwd">Password</label>
                    <div>
                        <input required="" type="password" class="js-password" name="password" id="passwd"
                               placeholder="Password"/>
                    </div>
                </div>
                <div>
                    <label for="confpasswd">Confim Password</label>
                    <div >
                        <input required="" type="password" class="js-password2" name="confirm_password"
                               id="confpasswd" placeholder="Confim password"/>
                    </div>
                </div>
                <button type="submit">Submit</button>
                <a type="button" href="#">Back</a>
            </form>
        </div>
    </div>
</fest:template>

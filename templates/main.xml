<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:include src="./header.xml"/>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="btn-group-vertical btn-group-lg block" role="group">
                <fest:if test="json.isAuth">
                    <a type="button" class="btn btn-success button__menu" href="/#game">Start Game</a>
                </fest:if>
                <a type="button" class="btn btn-primary button__menu" href="/#scoreboard">Score Board</a>
                <fest:if test="!json.isAuth">
                    <a type="button" class="btn btn-primary button__menu" href="/#login">Log In</a>
                    <a type="button" class="btn btn-primary button__menu" href="/#registration">Registration</a>
                </fest:if>
                <fest:if test="json.isAuth">
                    <a type="button" class="btn btn-success button__menu" href="/#logout">Logout</a>
                </fest:if>
            </div>
        </div>
    </div>
</fest:template>

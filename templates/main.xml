<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:include src="./header.xml"/>
    <div class="grid__col_12 grid__str_9">
        <div class="grid__str_2"></div>
        <div class = "grid__col_4 grid__col-offset_4 block__border">
            <a class = "button button__disabled grid__col-offset_4" disabled = ''>Вход</a>
            <a class = "button button__active" href="#registration">Регистрация</a>
            <form class="js-submit">
                <div class="js-alert"></div>
                <input name="login" type="text" id="inputLogin" class="js-login form__control" placeholder="Логин"
                       required="" autofocus=""/>
                <input name="password" type="password" id="inputPassword" class="js-password form__control"
                       placeholder="Пароль" required=""/>
                <button class="button button__check button__lg grid__col-offset_4" type="submit">Вход</button>
            </form>
        </div>
    </div>
</fest:template>
